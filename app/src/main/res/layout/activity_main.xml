<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFA155"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_syota_tiedot"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#B67142"
        android:text="@string/nappi1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/button_paivakirja"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:backgroundTint="#B67142"
        android:text="@string/nappi2"
        app:layout_constraintBottom_toTopOf="@+id/button_halloffame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_syota_tiedot" />

    <Button
        android:id="@+id/button_halloffame"
        android:layout_width="416dp"
        android:layout_height="55dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#B67142"
        android:text="@string/nappi3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="425dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:background="#B67142"
        android:fontFamily="@font/fascinate_inline"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button5"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:backgroundTint="#B67142"
        android:shape="ring"
        android:text="@string/nappi_tekijat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_halloffame" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B67142"
        android:text="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>